<html>
    <head>
        {{>header}}
    </head>
    <body class="container bg-dark">
    {{>websiteHeading}}
    {{#courseDetails}}

    <section class="container rounded bg-info mb-2 p-2">
        <!-- card heading -->
        <div class="row">
            <div class="col">
                <div class="card-body bg-warning rounded-top align-content-center">
                    <div class="card-title text-center align-content-center">
                        <h2 class="m-0 text-capitalize">Dance Course Booking</h2>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of row 1 card title -->

        <div class="row">
            <div class="card-body d-flex ">
                <div class="col-md-7 d-flex flex-column mt-auto ">
                    
                    <div class="card-text border border-dark rounded ">
                        
                        <div class="row ">                            
                            <div class="col ">
                                    <div class="form-group">
                                        <div class="card-body bg-warning rounded-top">
                                            <label class="font-weight-normal " for="courseTitle">Course Title:</label>                                            
                                            <label class=" p-1 font-weight-bolder font-size-2"></label>
                                            <h3 class="text-left">{{course_title}}</h3>
                                            
                                        </div>                    
                                    </div>
                                </div>                                                        
                            </div>
                    
                            <div class="row p-2">
                                <div class="col-8">
                                    <div class="form-group">
                                        <label class="font-weight-bold" for="location">Course Location:</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{location}}</label>
                                            </div>
                                    </div>
                                </div>

                                <div class="col-4">
                                    <div class="form-group text-right">
                                        <label class="font-weight-bold" for="cost">Cost (Â£):</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{cost}}</label>
                                            </div>
                                    </div>                                
                                </div>                                
                            </div>

                            <div class="row p-2">
                                <div class="col-3">
                                    <div class="form-group d-flex flex-column h-100">
                                        <label class="font-weight-bold mt-auto" for="courseStartDate">Course Start Date:</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{start_date}}</label>
                                            </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group d-flex flex-column h-100">
                                        <label class="font-weight-bold mt-auto" for="courseDuration">Course Duration:</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{course_duration}}</label>
                                            </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group d-flex flex-column h-100">
                                        <label class="font-weight-bold mt-auto" for="classStartTime">class Start Time:</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{class_start_time}}</label>
                                            </div>                                        
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group d-flex flex-column h-100">
                                        <label class="font-weight-bold mt-auto" for="courseDuration">Course Duration:</label>
                                            <div class="form-text bg-light m-0 rounded">
                                                <label class="m-1 p-1">{{course_duration}}</label>
                                            </div>                    
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col m-2">
                                    <div class="form-group d-flex flex-column h-100">
                                        <div class="mt-auto">
                                            <label class="font-weight-bold mb-2" for="description">Course Description</label>
                                            <textarea  type="text"
                                                        class="form-control"
                                                        id="description"
                                                        name="description"                                                                                
                                                        rows="4"
                                                        readonly>{{description}}
                                            </textarea>
                                        </div>
                                    </div>
                                </div>                                
                            </div>
                        </div><!--main row end-->

                            
                        
                    </div><!--end of card text -->

                    
                        <div class="col-5  border border-dark rounded">                            
                                
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card-text p-2">
                                            <h5 class="font-weight-bold mb-0"><u>Guest Booking Form</u></h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="row h-100 d-flex flex-column">
                                    <div class="mt-5 pt-5"></div>
                                        <div class="col">
                                            <div class="card-text">
                                                <form method="POST" for="guestFormBooking" action="/guest_book_course/{{_id}}"> 
                                                    <div class="form-group">                                       
                                                        <label for="guestEmail" class="font-weight-bold">email</label>                                            
                                                        <input type="email" id="guestEmail" name="guestEmail" class="form-control {{#errors.guestEmail}}is-invalid{{/errors.guestEmail}}" placeholder="enter email" value="{{formData.guestEmail}}" required>                                            
                                                    </div>
                                                    <div class="form-group">                                       
                                                        <label for="firstName" class="font-weight-bold">first name</label>                                            
                                                        <input type="text" id="firstName" name="firstName" class="form-control {{#errors.firstName}}is-invalid{{/errors.firstName}}" placeholder="enter first name" value="{{formData.firstName}}" required>                                            
                                                    </div>
                                                    <div class="form-group">                                       
                                                        <label for="surname" class="font-weight-bold">surname</label>
                                                        <input type="text" id="surname" name="surname" class="form-control {{#errors.surname}}is-invalid{{/errors.surname}}" placeholder="enter surname" value="{{formData.surname}}" required>
                                                    </div>                                                
                                        </div>
                                        <div class="row justify-content-end pt-2">
                                                    <div class="card-text col d-flex justify-content-end">                                    
                                                        <div class="align-content-end">
                                                            <div class="pt-2 my-0">                                    
                                                                <button for="guestFormBooking" type="submit" class="btn btn-primary">Confirm booking</button>                                        
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>                                                                     
                                        </div>
                                    </div>
                                   
                                </div>
                                
                </div>
                <!--end of right column -->
                </div>

                


            </div><!-- end of card body -->
        </div><!-- end of main row -->    
    </section>

    {{/courseDetails}}
    </body>
</html>
    
    